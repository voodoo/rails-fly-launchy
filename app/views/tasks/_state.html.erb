    <span class="inline-block rounded-full px-3 py-1 text-sm font-semibold mr-2
                 <%= case task.state
                     when 'pending'
                       'bg-yellow-400 text-black'
                     when 'in_progress'
                       'bg-green-400 text-black'
                     when 'completed'
                       'bg-blue-400 text-black'
                     end %>">
      <%= task.state.titleize %>
    </span>

