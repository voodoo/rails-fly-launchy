<header class="bg-gray-800 text-white p-4">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-2xl font-bold"><%= link_to "Ancient", root_path %></h1>
    <nav class="flex items-center gap-4">
    <%= link_to "About", about_path, class: " text-white hover:text-gray-300 font-bold py-2 px-4 " %>
      <%= link_to "Stories", stories_path, class: " text-white hover:text-gray-300 font-bold py-2 px-4 " %>
      <%= link_to "Tasks", tasks_path, class: "text-white hover:text-gray-300 font-bold py-2 px-4 " %>
      <% if Current.user %>
        <%= link_to "@", profile_path, class: "text-white hover:text-gray-300 font-bold py-2 px-4 " %>
      <% else %>
        <%= link_to "Log in", new_session_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
      <% end %>
    </nav>
  </div>
</header>
