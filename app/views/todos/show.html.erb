<div class="container mx-auto px-4">
  <h1 class="text-3xl font-bold mb-6"><%= @todo.title %></h1>

  <div class="mb-4">
    <p><strong class="font-semibold">Description:</strong> <%= @todo.description %></p>
    <p><strong class="font-semibold">Completed:</strong> <%= @todo.completed ? 'Yes' : 'No' %></p>
  </div>

  <%= link_to 'Edit', edit_todo_path(@todo), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded mr-2' %>
  <%= link_to 'Back', todos_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
</div>
