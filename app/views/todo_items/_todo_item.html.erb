<%= link_to todo_item_path(todo_item), class: "block bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 hover:bg-gray-50 transition duration-150 ease-in-out", data: { controller: "todo-item" } do %>
  <h2 class="text-xl font-bold mb-2"><%= todo_item.title %></h2>
  <p class="text-gray-700 text-base mb-2"><%= todo_item.description %></p>
  <p class="text-sm text-gray-600 mb-2">Due: <%= todo_item.due_date&.strftime('%B %d, %Y') || 'No due date' %></p>
  <div class="flex items-center justify-between">
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">
      <%= todo_item.state.titleize %>
    </span>
    <div>
      <%#= link_to 'View', todo_item, class: 'text-blue-500 hover:text-blue-700' %>
      <%#= link_to 'Edit', edit_todo_item_path(todo_item), class: 'text-blue-500 hover:text-blue-700 ml-2' %>
      <%#= link_to 'Collapse', collapse_todo_item_path(todo_item), method: :patch, class: 'text-red-500 hover:text-red-700 ml-2', data: { turbo_method: :patch } %>
    </div>
  </div>
<% end %>