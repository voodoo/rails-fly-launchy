<div class="container mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-4"><%= @todo_item.title %></h1>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">Description</h2>
      <p class="text-gray-700"><%= @todo_item.description %></p>
    </div>

    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">State</h2>
      <p class="text-gray-700"><%= @todo_item.state.titleize %></p>
    </div>

    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">Due Date</h2>
      <p class="text-gray-700"><%= @todo_item.due_date&.strftime('%B %d, %Y') || 'Not set' %></p>
    </div>

    <div class="flex items-center justify-between mt-6">
      <%= link_to 'Edit', edit_todo_item_path(@todo_item), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      <%= link_to 'Back', todo_items_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      <%= button_to 'Delete', todo_item_path(@todo_item), method: :delete, data: { confirm: 'Are you sure you want to delete this quantum task?' }, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    </div>
  </div>
</div>
