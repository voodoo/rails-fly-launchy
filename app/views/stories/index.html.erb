<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Stories" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Stories</h1>
    <% if Current.user %>
      <%= link_to "New story", new_story_path, class: "rounded-lg py-3 px-5 bg-green-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="stories" class="w-full mt-8">
        <% @stories.each do |story| %>
          <%= render "story", story: story %>
        <% end %>
  </div>
</div>
