<div class="w-full">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <h2 class="text-2xl font-bold mb-4">Recent Stories</h2>
      <% if @user.stories.any? %>
        <ul class="list-disc pl-5">
          <% @user.stories.order(created_at: :desc).limit(5).each do |story| %>
            <li class="mb-2">
              <%= link_to story.title, story_path(story), class: "text-blue-600 hover:text-blue-800" %>
              <span class="text-sm text-gray-500">(<%= time_ago_in_words(story.created_at) %> ago)</span>
            </li>
          <% end %>
        </ul>
        <%= link_to "View all stories", stories_path, class: "mt-4 inline-block text-blue-500 hover:text-blue-700" %>
      <% else %>
        <p class="text-gray-600">No stories yet.</p>
      <% end %>
    </div>
  </div>